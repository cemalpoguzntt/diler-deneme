<core:FragmentDefinition xmlns:core="sap.ui.core"
	xmlns="sap.m">
	<Dialog title="{i18n>OEE_LABEL_COMMENTS}" id = "commentPopup">
		<TextArea id = "comment" value="{commentModel>/NOTE}" wrapping="Soft" width="100%" height="100%"  maxLength = "250"/>
		<beginButton>
			<Button  text="{i18n>OEE_BTN_OK}" press="onCommentDialogSaveButton" />
		</beginButton>
		<endButton>
			<Button text="{i18n>OEE_BTN_CANCEL}" press="handleExit" />
		</endButton>
	</Dialog>
</core:FragmentDefinition>