<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:form="sap.ui.layout.form">
    <Dialog title="{i18n>OEE_LABEL_PLT_DOWN}" id="editBilletDownPalletFLM">
        <content>
 	<FlexBox>
                <items>
                    <Input id="palletNoInput" width="400px" type="Number" placeholder="{i18n>OEE_CONF_DETAIL_PALETTENO}" />
                </items>
            </FlexBox>
        </content>
        <OverflowToolbar>
            <ToolbarSpacer />
            <Button id="acceptWeightButton" text="{i18n>OEE_BTN_ACCEPT}" press="onUpdateBilletDownPallet" type="Accept"></Button>
            <Button id="cancelWeightButton" text="{i18n>OEE_BTN_CLOSE}" press="handleCancel" type="Reject"></Button>
            <ToolbarSpacer />
        </OverflowToolbar>
    </Dialog>
</core:FragmentDefinition>