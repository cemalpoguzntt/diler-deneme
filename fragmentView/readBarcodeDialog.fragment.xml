<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:form="sap.ui.layout.form">
    <Dialog title="{i18n>OEE_BTN_ADD}" id="readBarcodeDialog">
        <content>
            <FlexBox height="50px" alignItems="Center" justifyContent="Center">
                <items>
                    <Label text="{i18n>OEE_LABEL_BARCODE} : " width = "50px" design="Bold"/>
                    <Input id="inputBarcode"/>
                </items>
            </FlexBox>
        </content>
        <beginButton>
            <Button text="{i18n>OEE_BTN_ADD_ENTRY}" press="handleAddConfirm"></Button>
        </beginButton>
        <endButton>
            <Button text="{i18n>OEE_BTN_CLOSE}" press="handleCancel"></Button>
        </endButton>
    </Dialog>
</core:FragmentDefinition>