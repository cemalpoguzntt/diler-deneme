<core:FragmentDefinition xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.ui.layout.form"
    xmlns:form="sap.ui.layout.form"
    xmlns:l="sap.ui.layout">
    <Dialog state="Information" id="idWeightDialog" title="Paket Ağırlık">
        <content>
            <VBox justifyContent="Center" alignItems="Center">
                <VBox justifyContent="Center" alignItems="Center" class="sapUiSmallMarginBottom">
                    <Label design="Bold" text="Paket Ağırlık" class="sapUiTinyMarginBottom"/>
                    <Input id="idWeight" type="Tel" maxLength="5" textAlign="Center"/>
                </VBox>
                <VBox justifyContent="Center" alignItems="Center" class="sapUiSmallMarginBottom">
                    <Label design="Bold" text="Tolerans Aralığı" class="sapUiTinyMarginBottom"/>
                    <HBox justifyContent="Center" alignItems="Center">
                        <Input id="idMin" type="Tel" maxLength="5" textAlign="Center"/>
                        <Label design="Bold" text="-" class="sapUiTinyMarginBegin sapUiTinyMarginEnd"/>
                        <Input id="idMax" type="Tel" maxLength="5" textAlign="Center"/>
                    </HBox>
                </VBox>
            </VBox>
        </content>
        <buttons>
            <Button icon="sap-icon://save" text="Kaydet" press="onPressEditFragmentSave"/>
            <Button icon="sap-icon://sys-cancel" text="İptal" press="onPressEditFragmentCancel"/>
        </buttons>
    </Dialog>
</core:FragmentDefinition>