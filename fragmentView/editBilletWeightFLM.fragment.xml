<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:form="sap.ui.layout.form">
    <Dialog title="{i18n>OEE_EDIT_WEIGHT}" id="editBilletWeightFLM">
        <content>
            <FlexBox>
                <items>
                    <Input id="weightInput" width="400px" placeholder="{i18n>OEE_LABEL_WEIGHT}" />
                </items>
            </FlexBox>
        </content>
        <OverflowToolbar>
            <ToolbarSpacer />
            <Button id="acceptWeightButton" text="{i18n>OEE_BTN_ACCEPT}" press="onUpdateBilletWeight" type="Accept"></Button>
            <Button id="cancelWeightButton" text="{i18n>OEE_BTN_CLOSE}" press="handleCancel" type="Reject"></Button>
            <ToolbarSpacer />
        </OverflowToolbar>
    </Dialog>
</core:FragmentDefinition>