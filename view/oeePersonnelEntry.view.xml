	</HBox>
	<Table id="table0">
		<items>
			<ColumnListItem counter="0" id="item1">
				<cells>
					<Text id="text5" maxLines="0" />
					<Text id="text6" maxLines="0" />
					<Text id="text7" maxLines="0" />
				</cells>
			</ColumnListItem>
		</items>
		<columns>
			<Column id="column0">
				<header>
					<Label id="label0" text="AD"/>
				</header>
			</Column>
			<Column id="column7">
				<header>
					<Label id="label10" text="SOYAD"/>
				</header>
			</Column>
			<Column id="column1">
				<header>
					<Label id="label1" text="GİRİŞ TARİHİ"/>
				</header>
			</Column>
		</columns>
	</Table>
            </l:VerticalLayout>
		</content>  
	<footer>
                <Bar>
                	 <contentRight>
			<Button id = "confirmButton"  text = "{i18n>OEE_BTN_CONFIRM}" icon="sap-icon://accept" press="onClickConfirm"></Button>
                	</contentRight>
                </Bar>
        </footer>		
</Page>
</core:View>