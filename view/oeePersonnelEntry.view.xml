	controllerName="customActivity.controller.oeePersonnelEntry">
	<Page showHeader = "false" showNavButton="false">
		<content>  
	<l:VerticalLayout width="100%">

	<HBox height="40px" alignItems="Center" justifyContent="Center">
		<Label text="Sicil Numarası : " width="130px" design="Bold"/>
